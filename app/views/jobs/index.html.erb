<h1>Wazu</h1>
<p></p>

<!-- renderig flashes only now.  no longer error messages -->
<%= render 'shared/flashes' %>
<%= render 'jobs/job_form' %>

<table class="jobs">
  <tr>
    <td>id</td>
    <td>name</td>
    <td>command</td>
    <td>starting_at</td>
    <td>finished_at</td>
    <td>created_at</td>
    <td>updated_at</td>
    <td>host</td>
    <td>pid</td>
    <td>exit_status</td>
    <td>comment</td>
    <td>execution_paramters</td>
  </tr>

<%= will_paginate %>
  <% @jobs.each do |j| %>
    <tr>
 <% Time.zone = "Pacific Time (US & Canada)" %>
      <td><%= j.id %></td>
      <td><%= j.name %></td>
      <td><%= j.command %></td>
      <td><%= format_twz j.starting_at %></td>
      <td><%= format_twz j.finished_at %></td>
      <td><%= format_twz j.created_at %></td>
      <td><%= format_twz j.updated_at %></td>
      <td><%= j.host %></td>
      <td><%= j.pid %></td>
      <td><%= j.exit_status %></td>
      <td><%= j.comment %></td>
      <td><%= j.execution_paramters %></td>
      <td><%= render 'jobs/dp_job_form', :milkyway => j%></td>
      <td><%= link_to "delete", j, :method => :delete%></td>
    </tr>

  <% end %>

</table>

